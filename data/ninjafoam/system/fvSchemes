FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default        steadyState;
}

gradSchemes
{
    default            cellMDLimited leastSquares 0.5; //cellMDLimited Gauss linear 0.5; //cellMDLimited leastSquares 1.0;//Gauss linear;//  leastSquares;// cellLimited leastSquares 1.0;// Gauss linear;

/*    grad(p)                 Gauss linear;
    grad(U)                 Gauss linear;
